            <td>@Endereco.Estado</td>
            <td>@Endereco.CEP</td>
            <td>@Endereco.UserId</td>
            <td><a href="/Endereco/delete/@Endereco.IdEndereco">Delete</a></td>
            <td><a href="/Endereco/update/@Endereco.IdEndereco">Update</a></td>
            </tr>
        }
</table>
