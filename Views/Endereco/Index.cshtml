@model List<Endereco>


<style>
    .table{
        margin-top: 10vw;
    }



    .footer{
        position:fixed;
    }
</style>


@{ Layout = "/Views/Shared/Layout.cshtml"; }

    <table class="table table-hover">
        <tr>
            <th>Id</th>
            <th>Rua</th>
