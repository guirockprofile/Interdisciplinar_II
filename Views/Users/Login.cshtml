<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap">
    <link rel="icon" href="/Logo-Geek-VIP.png" type="image/x-icon" />
    <script src="main.js"></script>
    <style>
      body{
        font-family: "Arial", sans-serif;
      }
      div{
        background-color: rgb(27, 19, 173);
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        padding: 5vw;
        text-align: center;
        border-radius: 2vw;
      }
      div h2{
        color: white;
        font-size: 2.4vw;
      }
      input{
        padding: 2vh;
        border: none;
        border-radius: 2vw;
        font-size: 1.2vw;
        outline: none;
        margin-bottom: 1.3vw;
      }
      button{
        margin-top: 1vw;
        font-family: "Arial", sans-serif; 
        font-weight: bold;
        border-radius: 0.7vw;
        background-color: white;
        color: black;
        border: none;
        padding: 1.1vw;
        margin-bottom:2vw;
        font-size: 0.85vw;
      }
      button:hover{
        background-color: rgb(159, 159, 159);
      }

      a{
        margin-top: 1vw;
        font-family: "Arial", sans-serif; 
        font-weight: bold;
        border-radius: 0.7vw;
        background-color: white;
        color: black;
        border: none;
        padding: 1.1vw;
        text-decoration:none;
      }
    </style>
  </head>
  <body>

    @if(ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form action='/Users/login' method="post">
        <div>
            <h2>Intergeek</h2>
            <input type="Name" name="Name" class="form-control" placeholder="Login"/>
            <br>
             <input type="Senha" name="Senha" class="form-control" placeholder="Senha"/>
            <br>
            <button>Entrar</button>
            <br>
            <a href="/users/Create" class="">Cadastrar</a>
            </form>
        </div>
    </div>  
  </body>