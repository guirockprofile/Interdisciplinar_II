@model List<Produtos>
@{ Layout = "/Views/Shared/Layout.cshtml"; }


<style>
    
.boxTable {
  padding: 4vw;
  position: relative; /* Alterado para relative */
  margin-top: 15vw;
  background-color: rgb(238, 238, 238);
  border-radius: 2vw;
  text-align: center;
  align-items: center;
  display: flex;
  
  flex-direction: column; /* Adicione isso para alinhar o conteúdo no centro vertical */
  width: 99%;
  height: 25.9vw;
  margin: auto;
  margin-top: 15vw;
  margin-bottom: 10vw;
  justify-content: center;
}

table,th, td{
    border-collapse: collapse;
    padding: 1vw;
}

table{
    box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.3);
    background-color: white;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    width: 90vw;
    align-items: center;
}

table tr th{
    font-size:1.3vw ;
    color: black;   
}

table tr td{
    font-size: 0.8vw;
}


.container {
    border-collapse: collapse;
    border-radius: 1.2vw;
    box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.3);
    background-color: white;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    width: 90vw;
    margin-bottom: 1vw;
    align-items: center;
}

.footer{
    position:fixed;
}


</style>
<div class = "boxTable">
<a href="/Users/Index" class="btn btn-primary">Tela do Admin</a>
@* <th>TELA DO ADM PRODUTOS</th> *@
<table class="container">
    <tr>
        <th>Id</th>
        <th>Nome do Produto</th>
        <th>Descrição</th>
        <th>Valor Produto</th>
        <th>Quantidade do Produto</th>
        <th>Status do Produto</th>
        <th>Categoria do Produto</th>
        <th colspan="2">&nbsp;</th>
    </tr>

    @foreach(var produtos in Model)
    {
    <tr>
        <td>@produtos.IdProduto</td>
        <td>@produtos.NomeProd</td>
        <td>@produtos.Descricao</td>
        <td>@produtos.Preco</td>
        <td>@produtos.Quantidade</td>
        <td>@produtos.Status</td>
        <td>@produtos.Categorias.NomeCategoria</td>
        <td><a href="/produtos/delete/@produtos.IdProduto">Delete</a></td>
        <td><a href="/produtos/update/@produtos.IdProduto">Update</a></td>
    </tr>
    }
</table>
<a href="/produtos/create" class="btn btn-primary">Create</a>