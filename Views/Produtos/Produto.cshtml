@using Microsoft.AspNetCore.Http
@using System.Text.Json;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{ Layout = "/Views/Shared/Layout.cshtml";}
@model Produtos
@{
          string? session = HttpContextAccessor.HttpContext.Session.GetString("users");
           Users? users = null;
            if (session != null)
            {
                users = JsonSerializer.Deserialize<Users>(session);
            }
            else
            {
                users = new Users();
            }
          };
<style>
.boxProduto {
  padding: 4vw;
  position: relative; /* Alterado para relative */
  font-family: Arial, Helvetica, sans-serif;
  margin-top: 15vw;
  background-color: rgb(238, 238, 238);
  border-radius: 2vw;
  text-align: center;
  align-items: center;
  display: flex;
  flex-direction: column; /* Adicione isso para alinhar o conte√∫do no centro vertical */
  width: 60%;
  margin: auto;
  margin-top: 15vw;
  margin-bottom: 10vw;
  height: auto;
}
.descricaoProduto {
  margin-top: 2vw;
  margin-bottom: 2vw;
  flex-direction: row;
  font-family: Arial, Helvetica, sans-serif;
  font-weight: 600;
  font-size: 1.3vw;
}

.carrinhoProduto {
  display: flex;
  flex-direction: row;
  font-size: 1vw;
  padding: 1.3vw;
  background-color: rgb(27, 19, 173);
  border-radius: 1.4vw;
  text-align: center;
  max-width: 15vw;
  max-height: 7vh;
  margin: auto;
  align-items:center;
  margin-top: 1vw;
  line-height: 3vh;
}
.carrinhoProduto a {
  color: white;
}
</style>
<body>
    <div class="boxProduto">
      <div class="tituloProduto">
        <h2>@Model.NomeProd</h2>
      </div>
      <div class="descricaoProduto">
        <p>@Model.Descricao</p>
      </div>
      <div class="imgProduto">
        <img src="data:image/png;base64,@Model.Imagem" />
      </div>
      <div class="precoProduto">
        <p>@Model.Preco</p>
      </div>
      <div class="carrinhoProduto">
          <a href='/pedidos/AddPedido?id=@Model.IdProduto&user=@users.IdUser'> Adicionar ao Carrinho </a>
      </div>
    </div>
</body>